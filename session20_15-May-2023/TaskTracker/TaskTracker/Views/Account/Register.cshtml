@using TaskTracker.Models.ViewModels
@model UserVM

<div style="min-height:85vh;" class="d-flex justify-content-center align-content-center align-items-center">
    <div style="border-radius:1rem" class="shadow-lg form-card">
        <!-- Tabs Titles -->
        <!-- Icon -->
        <div class="px-4 pt-3">
            <div class="d-flex justify-content-center p-2 border-1">
                <img style="height:50px;width:50px;"
                     class="rounded-full"
                     src="/images/pngegg.png" id="icon" alt="User Icon" />
            </div>
            @if (TempData["error"] != null) {
                <p class="alert alert-danger">@TempData["error"]</p>
            }
            <!-- Login Form -->
            <form asp-action="register" class="mt-2">
                <div class="form-group">
                    <input asp-for=FirstName type="text" class="form-control" placeholder="First Name">
                    <span class="text-danger" style="font-size:12px;" asp-validation-for=FirstName></span>
                </div>
                <div class="form-group my-2">
                    <input asp-for=LastName type="text" class="form-control" placeholder="Last Name">
                    <span class="text-danger" style="font-size:12px;" asp-validation-for=LastName></span>
                </div>
                <div class="form-group my-2">
                    <input asp-for=Email type="text" class="form-control" placeholder="Email">
                    <span class="text-danger" style="font-size:12px;" asp-validation-for=Email></span>
                </div>
                <div class="form-group my-2">
                    <input asp-for=UserName type="text" class="form-control" placeholder="Username">
                    <span class="text-danger" style="font-size:12px;" asp-validation-for=UserName></span>
                </div>
                <div class="form-group my-2">
                    <input asp-for=PhoneNumber type="text" class="form-control" placeholder="Phone Number">
                    <span class="text-danger" style="font-size:12px;" asp-validation-for=PhoneNumber></span>
                </div>
                <div class="form-group my-2">
                    <input type="password" asp-for=Password class="form-control" placeholder="password">
                    <span class="text-danger" style="font-size:12px;" asp-validation-for=Password></span>
                </div>
                <div class="form-group my-2">
                    <input type="password" asp-for=ConfirmPassword class="form-control" placeholder="Confirm password">
                    <span class="text-danger" style="font-size:12px;" asp-validation-for=ConfirmPassword></span>
                </div>
                <input style="width:100%;" type="submit" class="my-4 d-block px-4 m-0 py-2 btn btn-primary" value="Register">
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("~/Views/Shared/_ValidationScriptsPartial.cshtml");
    }
}
