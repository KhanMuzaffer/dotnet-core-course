@using CollegeProject.Models.ViewModels
@model CourseModel
@{
  TempData["Title"] = "Edit Course";
}
<div class="w-75 mx-auto">
  <p>This is Edit page</p>
  <form action="/Course/EditCourse" method="post">
    <input type="hidden" asp-for="@Model.Id">
    <div class="form-group">
      <label for="name">Enter Name</label>
      <input name="Name" class="form-control" id="name" value="@Model.Name"/>
    </div>
    <div class="form-group">
      <label for="courseFee">Enter Fee</label>
      <input name="CourseFee" class="form-control" id="courseFee" value="@Model.CourseFee"/>
    </div>
    <button class="bg-primary mt-3 border-0 rounded px-3 py-2 text-light" type="submit">Update Course</button>
  </form>
</div>